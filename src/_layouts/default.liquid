<!doctype html>
<html lang="en">
  <head>
    {% render "head", metadata: site.metadata, title: page.title %}
  </head>

<body class="{{ page.layout }} {{ page.page_class }} px-2 md:px-16 lg:px-24 xl:px-48 flex flex-col min-h-screen bg-white">
    {% render "navbar", metadata: site.metadata, page: page %}

    <main class="flex-grow">
      {{ content }}
    </main>

    {% render "footer", metadata: site.metadata %}
  </body>
</html>
